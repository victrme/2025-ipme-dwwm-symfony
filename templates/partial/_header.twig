{% set categories = get_category_names() %}

<nav class="navbar bg-body-tertiary px-md-5">
    <div class="container-fluid">
        <a class="navbar-brand" href="{{ path('app_home') }}">
            <img src="https://symfony.com/favicons/favicon.svg" alt="Logo" width="30" height="24"
                class="d-inline-block align-text-top">
            Steamish v3
        </a>

        <div>
            <div class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown"
                    aria-expanded="false">
                    Categories
                </a>
                <ul class="dropdown-menu">
                    {% for category in categories %}
                    <li>
                        <a href="{{ path('app_category', { slug: category.slug }) }}" class="dropdown-item">
                            {{ category.name }}
                        </a>
                    </li>
                    {% endfor %}
                </ul>
            </div>
        </div>

        {% if app.user.name is defined %}
        <div class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                {{ app.user.email }}
            </a>
            <ul class="dropdown-menu">
                <li>
                    <a class="dropdown-item" href="{{ path('app_show_user', {id: app.user.id}) }}">Profil</a>
                </li>
                {% if app.user.roles[0] == 'ROLE_ADMIN' %}
                <li>
                    <a class="dropdown-item" href="{{ path('app_admin') }}">Administration</a>
                </li>
                {% endif %}
                <li>
                    <hr class="dropdown-divider">
                </li>
                <li>
                    <a class="dropdown-item" href="{{ path('app_logout') }}">Se d√©connecter</a>
                </li>
            </ul>
        </div>
        {% else %}
        <div>
            <a href="{{ path('app_register') }}">S'inscrire</a>
            ou
            <a href="{{ path('app_login') }}">Se connecter</a>
        </div>
        {% endif %}
    </div>
</nav>