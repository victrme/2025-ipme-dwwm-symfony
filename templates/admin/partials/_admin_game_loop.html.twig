
{% trans_default_domain 'admin' %}

<h2 class="my-3">{{ title }}</h2>
<table class="table table-striped table-dark">
    <thead>
        <tr>
            <th>{{ 'game.properties.name'|trans }}</th>
            <th>{{ 'game.properties.price'|trans }}</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        {% for game in games %}
            <tr>
                <td>
                    {{ game.name }}
                </td>
                <td>
                    {{ game.price|euro }}
                </td>
                <td>
                    {% include 'admin/partials/_actions_buttons.html.twig' with {
                        'pathEdit': path('app_admin_game_edit', {'id': game.id})
                    } %}
                </td>
            </tr>
        {% endfor %}
    </tbody>
</table>
